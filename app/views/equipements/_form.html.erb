<%= simple_form_for(@equipement) do |f| %>
  <% if equipement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(equipement.errors.count, "error") %> prohibited this equipement from being saved:</h2>

      <ul>
      <% equipement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="card text-white bg-danger mb-3">
    <div class="card-body">
      <h4 class="card-title"><%= fa_icon("id-card") %> Identité</h4>

      <div class="form-row">
        <div class='col-lg-6 col-sm-12'>

          <div class="form-group">
             <label for="equipement_marque">Marque</label>
             <select class="form-control" name="equipement[marque]" id="equipement_marque">
                <option value="Brocade">Brocade</option>
                <option value="Cisco">Cisco</option>
                <option value="Netgear">Netgear</option>
                <option value="Nortel">Nortel</option>
                <option value="Avaya">Avaya</option>
             </select>
           </div>

        </div>
        <div class='col-lg-6 col-sm-12'>
          <%= f.input :modele, id: :equipement_modele, label: 'Modèle', input_html: {placeholder:'ICX7250-24P...'} %>
        </div>
      </div>

      <div class="form-row">
        <div class='col-lg-6 col-sm-12'>
          <%= f.input :nom, id: :equipement_nom, label: 'Nom', input_html: {placeholder:'SW-AMB-ELE-S-Veil'} %>
        </div>
        <div class='col-lg-6 col-sm-12'>
          <%= f.input :ip, id: :equipement_ip, label: 'IP', input_html: {placeholder:'172.20.15.220'} %>
        </div>
      </div>

      <div class="form-row">
        <div class='col-lg-6 col-sm-12'>
          <%= f.input :asapid, id: :equipement_asapid, label: 'Identifiant ASAP', input_html: {placeholder:'Net-000666'} %>
        </div>
        <div class='col-lg-6 col-sm-12'>
          <%= f.input :serial, id: :equipement_serial, label: 'Numéro de série', input_html: {placeholder:'DUI3821N0B3'} %>
        </div>
      </div>
    </div>
  </div>

  <div class="card text-white bg-info mb-3">
    <div class="card-body">
      <h4 class="card-title"><%= fa_icon("handshake-o") %> Garantie</h4>
      <div class="form-row">
        <div class='col-lg-6 col-sm-12'>
          <%= f.input :achat, id: :equipement_achat, label: "Date d'achat", input_html: {placeholder: ''}  %>
        </div>
        <div class='col-lg-6 col-sm-12'>
          <%= f.input :garantie, id: :equipement_garantie, label: "Durée de garantie (en année)", input_html: {placeholder: ''}  %>
        </div>
      </div>
    </div>
  </div>

  <div class="card text-white bg-warning mb-3">
    <div class="card-body">
      <h4 class="card-title"><%= fa_icon("wrench") %> Configuration</h4>
      <div class="form-row">
        <div class='col-lg-6 col-sm-12'>
          <%= f.input :snmpcontact, id: :equipement_snmpcontact, label: 'Contact SNMP' %>
        </div>
        <div class='col-lg-6 col-sm-12'>
          <%= f.input :dns, id: :equipement_dns, label: 'DNS' %>
        </div>
      </div>
      <%= f.input :iosv, id: :equipement_iosv, label: "Version de l'OS" %>
    </div>
  </div>
  <%= f.button :submit, "Ajouter l'équipement", class: "btn btn-block btn-outline-primary mb-3" %>



<% end %>
