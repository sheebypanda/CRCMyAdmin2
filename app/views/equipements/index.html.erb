<% if notice  %>
  <div class="alert alert-success animated slideInDown" role="alert">
    <%= notice %>
  </div>
<% end %>
<% if params[:search] %>
<div class="alert alert-primary" role="alert">
  <%= fa_icon("server") %>
  <strong><%= @equipements.count %></strong> Équipements trouvés correspondants à la recherche </h1>
</div>
<% else %>
  <%= link_to fa_icon("plus")+' Ajouter un équipement', new_equipement_path, class: 'btn btn-outline-primary' %>
<% end %>

<table id="tablesorter" class="tablesorter table table-striped table-sm">
  <thead>
    <tr>
      <th><%= fa_icon("tag") %> Marque</th>
      <th><%= fa_icon("server") %> Modèle</th>
      <th><%= fa_icon("comment") %> Nom</th>
      <th><%= fa_icon("tag") %> Net</th>
      <th><%= fa_icon("thermometer-empty") %> SLA</th>
      <th><%= fa_icon("umbrella") %> Maintenu ?</th>
      <th><%= fa_icon("money") %> Coût</th>
      <th><%= fa_icon("calendar") %> Date début maintenance</th>
      <th><%= fa_icon("map-marker") %> Localisation</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipements.each do |equipement| %>
      <tr>
        <td><%= equipement.marque %></td>
        <td><%= equipement.modele %></td>
        <td><a href="<%= edit_equipement_path(equipement) %>" data-toggle="tooltip" data-placement="top" title="<%= equipement.ip %>"><%= equipement.nom %></a></td>
        <td><a href="<%= edit_equipement_path(equipement) %>" data-toggle="tooltip" data-placement="top" title="<%= equipement.ip %>"><%= equipement.asapid %></a></td>
        <td><%= equipement.sla %></td>
        <% if equipement.maintenance %>
          <td><%=  fa_icon("check", class: "text-success") %></td>
        <% else %>
          <td><%=  fa_icon("close", class: "text-danger") %></td>
        <% end %>
        <td><%= equipement.coutmaintenance %></td>
        <td><% if equipement.datemaintenance %>
              <%= equipement.datemaintenance.strftime("%d/%m/%Y") %>
            <% end %>
        </td>

        <td><% if equipement.recette %>
          <a href="<%= edit_localisation_path(equipement.recette.localisation) %>">
            <%= equipement.recette.localisation.ville %> <%= equipement.recette.localisation.nom %>
          </a>
        <% end %></td>
        <td><%= link_to fa_icon("pencil"), edit_equipement_path(equipement), class: "btn btn-outline-warning" %></td>
        <td><%= link_to fa_icon("trash"), equipement, class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @equipements %>
<br>


<h3>Importer un fichier CSV</h3>
  <%= form_tag import_equipements_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Importer le CSV" %>
  <% end %>
