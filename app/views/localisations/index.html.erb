<% if notice  %>
  <div class="alert alert-success animated slideInDown" role="alert">
    <%= notice %>
  </div>
<% end %>

<h1>Localisations</h1>
<%= link_to fa_icon("plus")+' Ajouter une localisation', new_localisation_path, class: 'btn btn-outline-primary' %>

<table id="tablesorter" class="tablesorter table table-sm table-striped">
  <thead>
    <tr>
      <th><%= fa_icon("") %> Nom</th>
      <th><%= fa_icon("map") %> Adresse</th>
      <th><%= fa_icon("barcode") %> CP</th>
      <th><%= fa_icon("home") %> Ville</th>
      <th><%= fa_icon("building") %> Étage</th>
      <th><%= fa_icon("phone") %> Tel</th>
      <th><%= fa_icon("map-marker") %> Géoloc</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @localisations.each do |localisation| %>
      <tr>
        <td><a href="<%= edit_localisation_path(localisation)%>"><%= localisation.nom %></a></td>
        <td><%= localisation.adresse %></td>
        <td><%= localisation.codepostal %></td>
        <td><%= localisation.ville %></td>
        <td><%= localisation.etage %></td>
        <td><%= localisation.tel %></td>
        <% if localisation.lat %>
          <td class="text-success"><%= fa_icon("check") %></td>
        <% else %>
          <td class="text-danger"><%= fa_icon("close") %></td>
        <% end %>
        <td><%= link_to fa_icon("pencil"), edit_localisation_path(localisation), class: "btn btn-outline-warning" %></td>
        <td><%= link_to fa_icon("trash"), localisation, class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
