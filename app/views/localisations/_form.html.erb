<%= simple_form_for(@localisation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nom %>
    <%= f.input :adresse %>
    <%= f.input :codepostal %>
    <%= f.input :ville %>
    <%= f.input :etage %>
    <%= f.input :tel %>
    <%= f.input :mail %>
    <%= f.input :description %>
    <%= f.input :lat %>
    <%= f.input :lng %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
